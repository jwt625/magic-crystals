  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/three": "^0.171.0",
    "autoprefixer": "^10.4.23",
    "eslint": "^9",
    "eslint-config-next": "^15.1.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "postcss": "^8",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
